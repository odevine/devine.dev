{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "images": ["images"],
      "components": ["components/index"],
      "types": ["types/index"]
    },
    "lib": ["dom", "es2015", "es2016"]
  },
  "exclude": ["artifacts/**/*", "dist/**/*", "node_modules"]
}
